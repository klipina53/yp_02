<UserControl x:Class="yp02.Pages.Partner.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:yp02.Pages.Partner"
             mc:Ignorable="d" >
   
        <Border Margin="20,10,20,10" BorderBrush="Black" BorderThickness="1" Background="White" MouseDown="updatePartner">
            <Grid>
                <Label x:Name="typeAndName" Content="Тип | Наименование партнера" FontFamily="Segoe UI" Margin="20,10,0,0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label x:Name="discount" Content="10%" FontFamily="Segoe UI" Margin="0,10,60,0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                <Label x:Name="director" Content="Директор" FontFamily="Segoe UI" Margin="20,35,0,0" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label x:Name="telephone" Content="+7 223 322 22 32" FontFamily="Segoe UI" Margin="20,55,0,0" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label x:Name="rating" Content="Рейтинг: 10" FontFamily="Segoe UI" Margin="20,75,0,10" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Button Click="historyProduct" Content="История реализации" FontFamily="Segoe UI" Width="150" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,75,60,0" Background="#67BA80"/>
            </Grid>
        </Border>
    
</UserControl>
