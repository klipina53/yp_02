<Page x:Class="yp02.Pages.Partner.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yp02.Pages.Partner"
      mc:Ignorable="d" 
      d:DesignHeight="870" d:DesignWidth="570" MinHeight="870" MinWidth="570"
      Title="Add">

    <Grid Background="#F4E8D3">
        <Border Margin="10,10,10,10" BorderBrush="Black" BorderThickness="1" Background="White">
            <Grid>
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                    <Grid>
                        <Label x:Name="header" Content="Добавление нового партнера" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0"/>
                        <Label Content="Введите наименование партнера: " FontFamily="Segoe UI" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,40,0,0"/>
                        <TextBox x:Name="nameCompany" FontFamily="Segoe UI" FontSize="18" Height="25" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,80,0,0" Background="#F4E8D3"/>
                        <Label Content="Выберите тип партнера: " FontFamily="Segoe UI" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,110,0,0"/>
                        <ComboBox x:Name="typePartner" FontFamily="Segoe UI" FontSize="18" Height="25" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,150,0,0" Background="#F4E8D3"/>
                        <Label Content="Введите адрес партнера: " FontFamily="Segoe UI" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,180,0,0"/>
                        <TextBox x:Name="address" FontFamily="Segoe UI" FontSize="18" Height="25" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,220,0,0" Background="#F4E8D3"/>
                        <Label Content="Введите ФИО директора: " FontFamily="Segoe UI" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,250,0,0"/>
                        <TextBox x:Name="fioDirector" FontFamily="Segoe UI" FontSize="18" Height="25" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,290,0,0" Background="#F4E8D3"/>
                        <Label Content="Введите электронную почту компании: " FontFamily="Segoe UI" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,320,0,0"/>
                        <TextBox x:Name="email" FontFamily="Segoe UI" FontSize="18" Height="25" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,360,0,0" Background="#F4E8D3"/>
                        <Label Content="Введите телефон компании: " FontFamily="Segoe UI" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,390,0,0"/>
                        <TextBox x:Name="telephone" FontFamily="Segoe UI" FontSize="18" Height="25" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,430,0,0" Background="#F4E8D3"/>
                        <Label Content="Введеите ИНН компании: " FontFamily="Segoe UI" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,460,0,0"/>
                        <TextBox x:Name="inn" FontFamily="Segoe UI" FontSize="18" Height="25" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,500,0,0" Background="#F4E8D3"/>
                        <Label Content="Введите рейтинг компании: " FontFamily="Segoe UI" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,530,0,0"/>
                        <TextBox x:Name="rating" FontFamily="Segoe UI" FontSize="18" Height="25" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,570,0,0" Background="#F4E8D3"/>
                        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,610,20,10">
                            <Button x:Name="addBtn" Click="addOrChange" Height="24" Width="150" Background="#67BA80" Margin="0,0,-160,0" Content="Добавить"/>
                            <Button Click="backPage" Height="24" Width="150" Background="#67BA80" Margin="0,0,160,0" Content="Назад"/>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>