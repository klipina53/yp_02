<UserControl x:Class="yp02.Pages.Partner.ItemHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:yp02.Pages.Partner"
             mc:Ignorable="d" >
    <Border Margin="20,10,20,10" BorderBrush="Black" BorderThickness="1" Background="White">
        <Grid>
            <Label x:Name="product" Content="Наименование продукта" FontFamily="Segoe UI" Margin="20,10,0,0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label x:Name="partner" Content="Наименование партнера" FontFamily="Segoe UI" Margin="20,35,0,0" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label x:Name="countProduct" Content="Количество продукции: " FontFamily="Segoe UI" Margin="20,55,0,0" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label x:Name="dateSell" Content="Дата продажи: " FontFamily="Segoe UI" Margin="0,55,60,0" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</UserControl>
