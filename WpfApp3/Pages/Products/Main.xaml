<Page x:Class="yp02.Pages.Products.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yp02.Pages.Products"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="#f4e8d3">
        <Grid Background="#67BA80" Height="60" VerticalAlignment="Top">
            <Image Source="/Images/logo.png" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>
            <Label Content="" VerticalAlignment="Center" FontSize="20" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"/>
            <Button Click="BackClick" Height="30" Width="100" Background="#f4e8d3" Margin="0,0,10,0" Content="Назад" HorizontalAlignment="Right" FontSize="15" BorderBrush="Transparent"/>

        </Grid>
        <Grid VerticalAlignment="Top" Height="30" Margin="5,65,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Label Content="Партнёр:" Height="30" FontSize="15" HorizontalAlignment="Left"/>
            <ComboBox x:Name="PartnersName" Height="30" FontSize="15" Margin="0,10,0,0" Grid.Column="1"/>
            <Button Click="Find" Height="28" Background="#67BA80"  Content="Добавить" BorderBrush="Transparent" Grid.Column="2"/>
        </Grid>
        <ScrollViewer Margin="5,100,5,10" Background="White">
            <StackPanel x:Name="parent"></StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
