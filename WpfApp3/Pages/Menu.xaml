<Page x:Class="yp02.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yp02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid Background="#f4e8d3">
        <Grid VerticalAlignment="Top" Background="#67ba80" Height="60">
            <Image Source="/Мастер пол.png" Height="50" Width="50" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <Label Content="Мастер пол" Height="40"  FontSize="22" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>

        </Grid>
        <StackPanel VerticalAlignment="Center" Width="200">
            <Button Click="OpenParents" Content="Partners" Height="40" FontSize="20" Background="#67ba80" Foreground="White" FontWeight="Bold" BorderBrush="Transparent"/>
            <Button Click="OpenProducts" Content="Products" Height="40" Margin="0,20,0,0" FontSize="20" Background="#67ba80" Foreground="White" FontWeight="Bold" BorderBrush="Transparent"/>

        </StackPanel>
    </Grid>
</Page>
